---

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/news', label: 'News' },
  { href: '/contact', label: 'Contact' },
  { href: '/advertise', label: 'Advertise' }
];
---

<header class="bg-white border-b border-brand-light">
  <a href="#main-content" class="skip-link">Skip to main content</a>
  
  <!-- Top Bar with Contact Info -->
  <div class="bg-brand-paper border-b border-brand-light/50">
    <div class="container mx-auto px-4 py-2">
      <div class="flex justify-between items-center text-sm text-brand-gray">
        <div class="flex items-center space-x-6">
          <a href="mailto:info@thecommunityobserver.com" class="flex items-center hover:text-brand-navy transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            info@thecommunityobserver.com
          </a>
          <a href="tel:8003766222" class="flex items-center hover:text-brand-navy transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            (800) 376-6222
          </a>
        </div>
        <div class="hidden md:block">
          <span class="font-medium">Weekly Community News</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Masthead Section -->
  <div class="container mx-auto px-4 py-3">
    <div class="text-center">
      <!-- Date and Edition Info -->
      <div class="text-sm text-brand-gray mb-2">
        <span id="current-date"></span> â€¢ Weekly Edition
      </div>
      
      <!-- Main Logo/Masthead -->
      <div class="mb-1">
        <a href="/" class="inline-block">
          <img
            src="/images/COLogo.jpg"
            alt="Community Observer"
            class="mx-auto block object-contain"
            style="max-height: 200px; width: auto;"
          />
        </a>
      </div>
      
      <!-- Tagline -->
      <div class="text-brand-gray text-lg mb-2">
        Your Local News Source
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <nav class="bg-brand-navy text-white" role="navigation" aria-label="Main navigation">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-center">
        <!-- Main Navigation -->
        <ul class="flex flex-wrap justify-center space-x-0 md:space-x-8">
          {navItems.map(item => (
            <li>
              <a 
                href={item.href}
                class={`block px-4 py-4 hover:bg-brand-gray/20 transition-colors font-medium border-b-2 border-transparent hover:border-brand-light ${
                  currentPath === item.href ? 'border-brand-light bg-brand-gray/10' : ''
                }`}
                aria-current={currentPath === item.href ? 'page' : undefined}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  // Set current date
  document.addEventListener('DOMContentLoaded', function() {
    const dateElement = document.getElementById('current-date');
    if (dateElement) {
      const today = new Date();
      /** @type {any} */
      const options = { 
        weekday: 'long', 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
      };
      // @ts-ignore - runtime browser API typings not available in this Astro client script context
      dateElement.textContent = today.toLocaleDateString('en-US', options);
    }
  });
</script>

<style>
  .skip-link {
    position: absolute;
    top: -40px;
    left: 6px;
    background: #2C3E50;
    color: white;
    padding: 8px;
    text-decoration: none;
    z-index: 100;
    border-radius: 0 0 4px 4px;
  }
  
  .skip-link:focus {
    top: 0;
  }
</style>

