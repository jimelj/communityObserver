---
import Page from '../layouts/Page.astro';
import Hero from '../components/Hero.astro';
---

<Page
  title="Contact Community Observer - Get in Touch"
  description="Contact Community Observer for editorial submissions, customer service, or advertising inquiries. We're here to help connect you with your community."
>
  <!-- Hero Section -->
  <Hero
    title="Contact Us"
    subtitle="Get in Touch"
    description="We're here to help you connect with your community. Reach out for editorial submissions, customer service, or advertising inquiries."
    variant="minimal"
  />

  <div class="container mx-auto px-4 py-16">
    
    <!-- Contact Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      
      <!-- Editorial Contact -->
      <div class="card p-8 text-center">
        <div class="bg-brand-navy/10 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-brand-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-serif font-bold text-brand-navy mb-4">Editorial</h3>
        <div class="space-y-3 text-brand-gray">
          <p class="font-medium text-brand-navy">Janice Seiferling</p>
          <p>Editor</p>
          <div class="pt-4 border-t border-brand-light">
            <p class="font-medium">Email</p>
            <a href="mailto:janice@thecommunityobserver.com" class="text-brand-navy hover:underline">
              janice@thecommunityobserver.com
            </a>
          </div>
          <div>
            <p class="font-medium">Phone</p>
            <a href="tel:+17325405308" class="text-brand-navy hover:underline">
              (732) 540-5308
            </a>
          </div>
        </div>
        <div class="mt-6">
          <p class="text-sm text-brand-gray">
            For story submissions, press releases, and editorial inquiries
          </p>
        </div>
      </div>

      <!-- Customer Service Contact -->
      <div class="card p-8 text-center">
        <div class="bg-brand-navy/10 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-brand-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-serif font-bold text-brand-navy mb-4">Customer Service</h3>
        <div class="space-y-3 text-brand-gray">
          <p class="font-medium text-brand-navy">General Support</p>
          <p>Delivery</p>
          <div class="pt-4 border-t border-brand-light">
            <p class="font-medium">Email</p>
            <a href="mailto:info@thecommunityobserver.com" class="text-brand-navy hover:underline">
              info@thecommunityobserver.com
            </a>
          </div>
          <div>
            <p class="font-medium">Phone</p>
            <a href="tel:+18003766222" class="text-brand-navy hover:underline">
              (800) 376-6222
            </a>
          </div>
        </div>
        <div class="mt-6">
          <p class="text-sm text-brand-gray">
            For delivery issues, subscription questions, and general support
          </p>
        </div>
      </div>

      <!-- Sales Contact -->
      <div class="card p-8 text-center">
        <div class="bg-brand-navy/10 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-brand-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-serif font-bold text-brand-navy mb-4">Advertising Sales</h3>
        <div class="space-y-4 text-brand-gray">
          <div>
            <p class="font-medium text-brand-navy">John Polizano</p>
            <a href="mailto:sales@thecommunityobserver.com" class="text-brand-navy hover:underline text-sm">
              sales@thecommunityobserver.com
            </a>
            <p class="text-sm">
              <a href="tel:+16315907835" class="text-brand-navy hover:underline">
                (631) 590-7835
              </a>
            </p>
          </div>
          <div class="border-t border-brand-light pt-4">
            <p class="font-medium text-brand-navy">Mike Colella</p>
            <a href="mailto:sales@thecommunityobserver.com" class="text-brand-navy hover:underline text-sm">
              sales@thecommunityobserver.com
            </a>
            <p class="text-sm">
              <a href="tel:+19736503482" class="text-brand-navy hover:underline">
                (973) 650-3482
              </a>
            </p>
          </div>
        </div>
        <div class="mt-6">
          <p class="text-sm text-brand-gray">
            For advertising opportunities and business partnerships
          </p>
        </div>
      </div>
    </div>

    <!-- Contact Form Section -->
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-brand-navy mb-4">
          Send Us a Message
        </h2>
        <p class="text-xl text-brand-gray">
          Have a question or want to get in touch? We'd love to hear from you.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        <!-- Contact Form -->
        <div class="card p-8">
          <h3 class="text-2xl font-serif font-bold text-brand-navy mb-6">Contact Form</h3>
          <form class="space-y-6" action="/sendEmail" method="POST">
            <input type="hidden" name="formType" value="Contact" />
            
            <!-- Honeypot for spam protection -->
            <div style="display: none;">
              <input type="text" name="honeypot" tabindex="-1" autocomplete="off" />
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-brand-navy mb-2">
                  Full Name *
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 border border-brand-light rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-navy focus:border-transparent"
                  placeholder="Your full name"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-brand-navy mb-2">
                  Email Address *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 border border-brand-light rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-navy focus:border-transparent"
                  placeholder="your.email@example.com"
                />
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="phone" class="block text-sm font-medium text-brand-navy mb-2">
                  Phone Number
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="w-full px-4 py-3 border border-brand-light rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-navy focus:border-transparent"
                  placeholder="(555) 123-4567"
                />
              </div>
              
              <div>
                <label for="organization" class="block text-sm font-medium text-brand-navy mb-2">
                  Organization
                </label>
                <input 
                  type="text" 
                  id="organization" 
                  name="organization"
                  class="w-full px-4 py-3 border border-brand-light rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-navy focus:border-transparent"
                  placeholder="Your organization"
                />
              </div>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-brand-navy mb-2">
                Message *
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                required
                class="w-full px-4 py-3 border border-brand-light rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-navy focus:border-transparent resize-vertical"
                placeholder="Tell us how we can help you..."
              ></textarea>
            </div>
            
            <button 
              type="submit"
              class="w-full btn-primary text-center"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Additional Information -->
        <div class="space-y-8">
          
          <!-- Office Hours -->
          <div class="card p-6">
            <h4 class="text-lg font-serif font-bold text-brand-navy mb-4">Office Hours</h4>
            <div class="space-y-2 text-brand-gray">
              <div class="flex justify-between">
                <span>Monday - Friday</span>
                <span>9:00 AM - 5:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Saturday</span>
                <span>10:00 AM - 2:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Sunday</span>
                <span>Closed</span>
              </div>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="card p-6">
            <h4 class="text-lg font-serif font-bold text-brand-navy mb-4">Quick Links</h4>
            <div class="space-y-3">
              <a href="/submission-guidelines" class="block text-brand-gray hover:text-brand-navy transition-colors">
                → Submission Guidelines
              </a>
              <a href="/advertise" class="block text-brand-gray hover:text-brand-navy transition-colors">
                → Advertising Information
              </a>
              <a href="/files/media-kit.pdf" class="block text-brand-gray hover:text-brand-navy transition-colors">
                → Download Media Kit
              </a>
              <a href="/about" class="block text-brand-gray hover:text-brand-navy transition-colors">
                → About Community Observer
              </a>
            </div>
          </div>

          <!-- Response Time -->
          <div class="bg-gradient-to-br from-brand-navy to-brand-gray text-white rounded-lg p-6">
            <h4 class="text-lg font-serif font-bold mb-3">Response Time</h4>
            <p class="text-brand-light mb-4">
              We typically respond to all inquiries within 24 hours during business days.
            </p>
            <p class="text-sm text-brand-light">
              For urgent editorial matters, please call our editorial line directly.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Page>

<script src="/js/forms.js" is:inline></script>

