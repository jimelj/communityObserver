---
import Page from './Page.astro';
import AdSlot from '../components/AdSlot.astro';

export interface Props {
  title: string;
  description: string;
  date: string;
  author?: string;
  image?: string;
  tags?: string[];
  section?: string;
}

const {
  title,
  description,
  date,
  author = 'Community Observer Staff',
  image,
  tags = [],
  section = 'News'
} = Astro.props;

const publishedTime = new Date(date).toISOString();
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Page
  title={`${title} | Community Observer`}
  description={description}
  type="article"
  publishedTime={publishedTime}
  author={author}
  section={section}
  tags={tags}
  image={image}
>
  <article class="container mx-auto px-4 py-8">
    
    <!-- Breadcrumb Navigation -->
    <nav aria-label="Breadcrumb" class="mb-8">
      <ol class="flex items-center space-x-2 text-sm text-brand-gray">
        <li>
          <a href="/" class="hover:text-brand-navy transition-colors">Home</a>
        </li>
        <li>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
        </li>
        <li>
          <a href="/news" class="hover:text-brand-navy transition-colors">News</a>
        </li>
        <li>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
        </li>
        <li class="text-brand-navy" aria-current="page">
          {title}
        </li>
      </ol>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      
      <!-- Main Article Content -->
      <div class="lg:col-span-3">
        
        <!-- Article Header -->
        <header class="mb-8">
          {section && (
            <div class="mb-4">
              <span class="inline-block bg-brand-navy text-white px-3 py-1 rounded-full text-sm font-medium uppercase tracking-wider">
                {section}
              </span>
            </div>
          )}
          
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-serif font-bold text-brand-navy leading-tight mb-6">
            {title}
          </h1>
          
          <div class="flex flex-wrap items-center gap-4 text-brand-gray mb-6">
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <span>By {author}</span>
            </div>
            
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <time datetime={publishedTime}>{formattedDate}</time>
            </div>
          </div>
          
          {tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-6">
              {tags.map(tag => (
                <span class="bg-brand-light/30 text-brand-navy px-3 py-1 rounded-full text-sm">
                  #{tag}
                </span>
              ))}
            </div>
          )}
        </header>

        <!-- Hero Image -->
        {image && (
          <div class="mb-8">
            <img 
              src={image} 
              alt={title}
              class="w-full h-64 md:h-96 object-cover rounded-lg shadow-lg"
              loading="eager"
            />
          </div>
        )}

        <!-- Article Content -->
        <div class="article-content prose prose-lg max-w-none">
          <slot />
        </div>

        <!-- Article Footer -->
        <footer class="mt-12 pt-8 border-t border-brand-light">
          <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
            <div class="text-sm text-brand-gray">
              <p>Published on {formattedDate}</p>
              {author && <p>Written by {author}</p>}
            </div>
            
            <div class="flex space-x-4">
              <button 
                class="text-brand-gray hover:text-brand-navy transition-colors"
                onclick="window.print()"
                aria-label="Print article"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                </svg>
              </button>
              
              <button 
                class="text-brand-gray hover:text-brand-navy transition-colors"
                onclick="navigator.share ? navigator.share({title: document.title, url: window.location.href}) : navigator.clipboard.writeText(window.location.href)"
                aria-label="Share article"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                </svg>
              </button>
            </div>
          </div>
        </footer>
      </div>

      <!-- Sidebar -->
      <aside class="lg:col-span-1" role="complementary" aria-label="Related content and advertisements">
        
        <!-- Sidebar Ad -->
        <AdSlot slot="sidebar_rect" className="mb-8" />
        
        <!-- Related Articles -->
        <div class="card p-6">
          <h3 class="font-serif font-bold text-brand-navy mb-4">More News</h3>
          <div class="space-y-4">
            <a href="/news" class="block text-brand-gray hover:text-brand-navy transition-colors">
              <p class="font-medium">View all community news</p>
              <p class="text-sm mt-1">Stay updated with the latest happenings</p>
            </a>
          </div>
        </div>
        
        <!-- Contact Info -->
        <div class="card p-6 mt-6">
          <h3 class="font-serif font-bold text-brand-navy mb-4">Submit News</h3>
          <p class="text-brand-gray text-sm mb-4">
            Have a story to share? We'd love to hear from you.
          </p>
          <a 
            href="/submission-guidelines" 
            class="btn-secondary text-sm px-4 py-2"
          >
            Submission Guidelines
          </a>
        </div>
      </aside>
    </div>
  </article>
</Page>

